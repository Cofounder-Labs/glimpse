{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Glimpse Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/glimpse/run.py",
            "python": "${command:python.interpreterPath}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
